<div class="contain d-flex justify-content-center align-items-center ">
  <div class="card p-4 card_css w-30">
    <h1 class="mb-3 mx-auto" >Change Password</h1>
    <%= form_with(model: @user, url: update_password_user_path(current_user), method: :patch) do |form| %>
      <div class=" mb-3">
        <div class="d-flex flex-row align-items-center gap-1">
          <%= form.label :password  , class: 'form-label'%>
          <span class="star">*</span>
        </div>
        <%= form.password_field :password , class: 'form-control'%>
      </div>
      <div class=" mb-3">
        <div class="d-flex flex-row align-items-center gap-1">
          <%= form.label :password_confirmation  , class: 'form-label' %>
          <span class="star">*</span>
        </div>
        <%= form.password_field :password_confirmation , class: 'form-control'%>
      </div>
      <div class="actions">
        <%= form.submit "Change Password" , class: 'btn full-btn btn-primary btn-lg w-100 mb-3'%>
      </div>
    <% end %>
  </div>
</div>
