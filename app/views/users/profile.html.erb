<nav class="d-flex justify-content-between align-items-center">
  <div class="d-flex align-items-center">
    <%= link_to home_path do %>
      <i class="fas fa-arrow-left fa-2x back-icon me-4"></i>
      <% end %>
        <h2>Profile</h2>
  </div>

  <%= render 'profilemenu-dropdown' %>

</nav>

<div class="container">
  <div class="row gap-2 flex-column flex-md-row">
    <div class="col-12 col-md-4 profile1 ">
      <div class="d-flex flex-column align-items-center gap-4">
        <div class="profile-picture-container">
          <% if current_user.profile_photo.attached? %>
            <%= image_tag current_user.profile_photo, class: 'profile-picture' %>
              <% else %>
                <div class="default-profile-picture-lg profile-picture">
                  <i class="fas fa-user fa-5x"></i>
                </div>
                <% end %>
        </div>
        <div class="profile-actions w-100">
          <a href="<%= current_user.linkedin_profile %>" class="btn btn-primary w-100">LinkedIn Profile</a>
        </div>

        <div class="profile-2 w-100">
          <%= link_to "Edit Profile" , edit_user_path(current_user), class: "btn btn-primary w-100 edit" %>
            <%= link_to "Delete Account" , "users/#{current_user.id}/delete_account" , method: :delete,
              class: " btn btn-primary w-100 delete" %>

        </div>
      </div>
    </div>
    <div class="col-12 col-md-8 profile-3">
      <div class=" col profile-details">
        <p><strong class="title">Name</strong>
          <%= current_user.username %>
        </p>
        <p><strong class="title">Email</strong>
          <%= current_user.email %>
        </p>
        <p><strong class="title">Qualification</strong>
          <%= current_user.qualification %>
        </p>
        <p><strong class="title">Experience</strong>
          <%= current_user.experience %>
        </p>
        <p><strong class="title">Current Organization</strong>
          <% if current_user.current_organization=="" %>
            <%= "Not working right now" %>
              <%else%>
                <%= current_user.current_organization %>
                  <%end%>
        </p>
        <p><strong class="title">Skills</strong>
          <%= current_user.skills %>
        </p>


      </div>





    </div>
  </div>
</div>