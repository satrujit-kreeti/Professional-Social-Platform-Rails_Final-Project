<div class="contain d-flex justify-content-center align-items-center">
  <div class="card p-4 card_css">
    <h1 class="mb-3 mx-auto">Provide Additional Information</h1>

    <%= form_for @user, url: user_path(@user), method: :patch do |f| %>
      <div class="mb-3">
        <%= f.label :username, 'Name' , class: 'form-label' %>
          <%= f.text_field :username, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :profile_photo, 'Profile Image' , class: 'form-label' %>
          <%= f.file_field :profile_photo, accept: 'image/jpeg,image/png' , class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :linkedin_profile, 'LinkedIn Profile' , class: 'form-label' %>
          <%= f.text_field :linkedin_profile, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :qualification, 'Qualification' , class: 'form-label' %>
          <%= f.select :qualification,['B.Tech','B.A', 'B.Sc' ,'B.Com' ], {}, class: 'form-select' %>
      </div>

      <div class="mb-3">
        <%= f.label :experience, 'Experience' , class: 'form-label d-block' %>
          <div class="d-flex gap-4">
            <div class="form-check w-100 ">
              <%= f.radio_button :experience, 'experienced' , class: 'form-check-input' %>
                <%= f.label :experience_experienced, 'Experienced' , class: 'form-check-label' %>
            </div>
            <div class="form-check w-100">
              <%= f.radio_button :experience, 'fresher' , class: 'form-check-input' %>
                <%= f.label :experience_fresher, 'Fresher' , class: 'form-check-label' %>
            </div>
          </div>
      </div>

      <!-- <div class="mb-3">
              <%= f.label :experience, 'Years Range' , class: 'form-label' %>
                <%= f.select :experience, ['0-1 Years', '1-5 Years' , '5-10 Years' , 'More than 10 Years' ], {}, {
                  class: 'form-select' , disabled: @disabled_value } %>
            </div> -->



      <div class="mb-3">
        <%= f.label :current_organization, 'Current Organization' , class: 'form-label' %>
          <%= f.text_field :current_organization, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :skills, 'Skills' , class: 'form-label' %>
          <%= f.text_field :skills, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.check_box :relevant_skill_notification, class: 'form-check-input' %>
          <%= f.label :relevant_skill_notification, 'Click here to receive relevant notification for job posting' ,
            class: 'form-check-label' %>
      </div>
      <%= f.submit 'Save Details' , class: 'btn btn-primary btn-lg w-100 mb-3' %>
        <% end %>
          <% if @errors %>
            <div class="alert alert-danger">
              <ul>
                <% @errors.each do |error| %>
                  <li>
                    <%= error %>
                  </li>
                  <% end %>
              </ul>
            </div>
            <% end %>
  </div>
</div>