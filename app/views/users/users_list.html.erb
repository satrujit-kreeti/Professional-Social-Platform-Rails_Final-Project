<%= render 'shared/navbar'%>
<div class="container">
  <div class="d-flex flex-column gap-1 profile1 pt-3">
    <div class="list-container">
      <% @users.each do |u| %>
        <div class="list-item">
          <div class="details-container">
            <% if u.profile_photo.attached? %>
              <%= image_tag u.compressed_profile_photo, class: 'rounded-circle avatar-image' %>
            <% else %>
              <div class="default-profile-picture">
                <i class="fas fa-user fa-lg"></i>
              </div>
            <% end %>
            <div class="secondary-details-container">
              <%= link_to u.username, user_profile_user_path(u), class: 'title-text' , method: :get%>
              <span class="description-text">
                <%= u.email %>
              </span>
            </div>
          </div>
          <div class="details-container">
            <%= link_to 'View profile', user_profile_user_path(u), class: "btn secondary-btn btn-primary" , method: :get%>
            <%= link_to link_to 'Delete Account', delete_account_path(u), method: :delete, data: { confirm: 'Are you sure you want to delete your account?' } , class: "btn secondary-btn btn-primary btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
